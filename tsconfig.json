{
  "compilerOptions": {
    "target": "ES2015", // Ensure ES2015+ for async iterators
    "module": "CommonJS",
    "declaration": true, // Generate type declarations
    "outDir": "./dist", // Output directory for compiled files
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "downlevelIteration": true, // Allow iteration on async types like Uint8Array
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
